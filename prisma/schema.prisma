model Category {
  id        Int      @id @default(autoincrement())
  name      String
  products  Product[]
}

model Product{ 
  id        Int      @id @default(autoincrement())
  name      String
  description String?
  price     Float
  stock     Int

  categoryId Int
  category Category @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

